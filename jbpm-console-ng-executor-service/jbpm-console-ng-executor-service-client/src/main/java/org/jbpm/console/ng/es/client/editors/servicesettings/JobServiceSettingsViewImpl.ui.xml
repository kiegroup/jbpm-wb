<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:bootstrap='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:with field="i18n"
             type="org.jbpm.console.ng.es.client.i18n.Constants"/>
 

    <ui:style>
        .mandatory-field {
        color: red;
        }
    </ui:style>

    <gwt:HTMLPanel>
        <bootstrap:Well>
            <bootstrap:Fieldset>
                <bootstrap:ControlGroup ui:field="startedControlGroup">
                    <bootstrap:ControlLabel for="startedLabel">
                        <ui:text from="{i18n.Status}"/>
                    </bootstrap:ControlLabel>
                    <bootstrap:Controls>
                        <bootstrap:Label ui:field="startedLabel"/>
                    </bootstrap:Controls>
                </bootstrap:ControlGroup>
        
                
                <bootstrap:ControlGroup ui:field="numberOfExecutorsControlGroup">
                    <bootstrap:ControlLabel for="numberOfExecutorsText">
                        <span class="{style.mandatory-field}">*</span>
                        <ui:text from="{i18n.Number_of_Threads}"/>
                    </bootstrap:ControlLabel>
                    <bootstrap:Controls>
                        <bootstrap:IntegerBox bootstrap:id="numberOfExecutorsText" ui:field="numberOfExecutorsText"/>
                        <bootstrap:HelpInline ui:field="numberOfExecutorsHelpInline"/>
                    </bootstrap:Controls>
                </bootstrap:ControlGroup>
        
                <bootstrap:ControlGroup ui:field="frequencyControlGroup">
                    <bootstrap:ControlLabel for="frequencyText">
                        <span class="{style.mandatory-field}">*</span>
                        <ui:text from="{i18n.Frequency}"/>
                    </bootstrap:ControlLabel>
                    <bootstrap:Controls>
                        <bootstrap:TextBox bootstrap:id="frequencyText" ui:field="frequencyText" placeholder="{i18n.Frequency}"/>
                        <bootstrap:HelpInline ui:field="frequencyHelpInline"/>
                    </bootstrap:Controls>
                </bootstrap:ControlGroup>

            </bootstrap:Fieldset>
            
            
        </bootstrap:Well>
        <bootstrap:ModalFooter>
            <bootstrap:Button type="PRIMARY" ui:field="startStopButton"></bootstrap:Button>
        </bootstrap:ModalFooter>
    </gwt:HTMLPanel>
    
</ui:UiBinder>