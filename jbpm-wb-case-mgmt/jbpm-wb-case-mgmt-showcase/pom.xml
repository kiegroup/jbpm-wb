      <id>fullProfile</id>
      <activation>
        <property>
          <name>full</name>
        </property>
      </activation>
      <properties>
        <gwt.compiler.localWorkers>2</gwt.compiler.localWorkers>
      </properties>
      <build>
        <pluginManagement>
          <plugins>
